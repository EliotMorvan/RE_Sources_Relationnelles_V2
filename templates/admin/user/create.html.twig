{% extends 'admin/base.html.twig' %}


{% block title %}Nouvel utilisateur{% endblock %}


{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Créer un nouvel utilisateur</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('admin_user_index') }}" class="btn btn-sm btn-outline-secondary">
                Retour à la liste
            </a>
        </div>
    </div>

    <form action="{{ path('admin_user_create') }}" method="post">
        {% include 'admin/user/_form.html.twig' %}
        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" name="create_user" class="btn btn-success">
                    Enregistrer
                </button>
                <a href="{{ path('admin_user_index') }}" class="btn btn-light">
                    Annuler
                </a>
            </div>
        </div>
    </form>
{% endblock %}
