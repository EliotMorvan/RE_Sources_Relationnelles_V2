{% extends 'admin/base.html.twig' %}


{% block title %}Nouvel utilisateur{% endblock %}


{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Supprimer l'utilisateur</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('admin_user_create') }}"
               class="btn btn-sm btn-outline-success">
                Nouvel utilisateur
            </a>
            <a href="{{ path('admin_user_index') }}" class="btn btn-sm btn-outline-secondary">
                Retour Ã  la liste
            </a>
        </div>
    </div>

    <form action="{{ path('admin_user_delete', {'id': user.id}) }}" method="post">
        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="confirm" id="confirm" value="1" required>
                    <label class="form-check-label" for="confirm">
                        Confirmer la suppression ?
                    </label>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" name="delete_user" class="btn btn-danger">
                    Enregistrer
                </button>
                <a href="{{ path('admin_user_read', [user.id]) }}" class="btn btn-light">
                    Annuler
                </a>
            </div>
        </div>
    </form>
{% endblock %}
