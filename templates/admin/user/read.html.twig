{% extends 'admin/base.html.twig' %}


{% block title %}Utilisateurs{% endblock %}


{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Détail de l'utilisateur</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('admin_user_create') }}"
               class="btn btn-sm btn-outline-success">
                Nouvel utilisateur
            </a>
            <a href="{{ path('admin_user_index') }}" class="btn btn-sm btn-outline-secondary">
                Retour à la liste
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <span class="col-sm-2 col-form-label">Email</span>
        <div class="col-sm-10">
            <span class="form-control">{{ user.email }}</span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <a href="{{ path('admin_user_update', {'id': user.id}) }}"
               class="btn btn-outline-warning">
                Modifier l'utilisateur
            </a>
            <a href="{{ path('admin_user_delete', {'id': user.id}) }}"
               class="btn btn-outline-danger">
                Supprimer l'utilisateur
            </a>
        </div>
    </div>

{% endblock %}
