{# templates/ressource/index.html.twig #}

{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Créateur</th>
                </tr>
            </thead>
            <tbody>
                {% for ressource in ressources %}
                <tr>
                    <td>{{ ressource.id }}</td>
                    <td>{{ ressource.titre }}</td>
                    <td>{{ ressource.contenu }}</td>
                    <td>{{ ressource.createur.email }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if currentUser.droit is not null %}
        <a href="{{ path('create_ressource')}}" class="btn btn-light">Créer ressource</a>
        {% endif %}
    </div>
{% endblock %}