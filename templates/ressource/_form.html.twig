<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<div class="row mb-3">
    <label for="inputTitre" class="col-sm-2 col-form-label">Titre</label>
    <div class="col-sm-10">
        <input class="form-control" 
                type="text" name="titre" id="inputTitre"
                value="{{ ressource.titre }}">
    </div>
</div>
<div class="row mb-3">
    <label for="inputCategorie" class="col-sm-2 col-form-label">Cat√©gorie</label>
    <div class="col-sm-10">
        <select class="form-control" id="inputCategorie" name="categorie">
            {% for categorie in categories %}{% set selected = '' %}
                {% if (ressource.categorie) == categorie %}
                {% set selected = 'selected' %}
                {% endif %}
                <option value={{categorie.id}} {{ selected }}>{{categorie.nom}}</option>
            {% endfor %}
        </select>
    </div>
</div>
<div class="row mb-3">
    <label for="inputType" class="col-sm-2 col-form-label">Type</label>
    <div class="col-sm-10">
        <select class="form-control" id="inputType" name="type">
            {% for type in types %}{% set selected = '' %}
                {% if (ressource.type) == type %}
                {% set selected = 'selected' %}
                {% endif %}
                <option value={{type}} {{ selected }}>{{type |replace({'_': ' '})|capitalize}}</option>
            {% endfor %}
        </select>
    </div>
</div>
<div class="row mb-3">
    <label for="inputContenu" class="col-sm-2 col-form-label">Contenu</label>
    <div class="col-sm-10">
        <textarea class="form-control"
            type="hidden" name="contenu" id="inputContenu">{{ ressource.contenu  | raw }}
        </textarea>
        <script>
                CKEDITOR.replace( 'contenu' );
        </script>
    </div>
</div>
